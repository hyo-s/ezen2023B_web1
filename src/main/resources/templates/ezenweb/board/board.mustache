{{>ezenweb/header}}
    <div class="container">
        <h3> 게시판 </h3>
        <a href="/board/write">글쓰기</a>

        <div class="boardSizeView">
            <select class="pageBoardSize" onchange="onPageBoardSize( this )">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
            </select>개씩 보기
        </div>
        <div class="boardInfo">
            전체 페이지 수 : <span class="totalPage"></span>
            전체 게시글 수 : <span class="totalBoardSize"></span>
        </div>

        <div class="categoryBtn">
            <button class="categoryActive" type="button" onclick="onBcno(0)">전체보기</button>
            <button type="button" onclick="onBcno(1)">자유</button>
            <button type="button" onclick="onBcno(2)">노하우</button>
        </div>

        <div class="search">
            <div class="searchSelect">
                <select class="key">
                    <option value="b.btitle">제목</option>
                    <option value="b.bcontent">내용</option>
                    <option value="m.id">작성자</option>
                </select>
            </div>
            <div class="searchBox">
                <input class="keyword form-control me-2" type="text"/>
                <button class="btn btn-outline-success" type="button" onclick="onSearch()">검색</button>
            </div>
        </div>

        <table class="table table-striped table table-hover align-middle">
            <thead>
            <tr>
                <th style="width:5%" scope="col">번호</th>
                <th style="width:60%" scope="col">제목</th>
                <th style="width:15%" scope="col">작성자</th>
                <th style="width:15%" scope="col">작성일</th>
                <th style="width:5%" scope="col">조회수</th>
            </tr>
            </thead>
            <tbody id="boardTableBody">

            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">

            </ul>
        </nav>
    </div>
<script src="/js/board/board.js"></script>
{{>ezenweb/footer}}